#include <WiFi.h>
#include <HTTPClient.h>
#include <ArduinoJson.h>
#include <Stepper.h>
#define STEPS 300

Stepper stepper(STEPS, 5, 18, 19, 21);
int before = 0;
int now = 0;
const char* ssid = "ANDET";
const char* password = "SkoleUdstyrBGE";

void setup() {
  Serial.begin(115200);
  delay(4000);
  stepper.setSpeed(75);
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(1000);
    Serial.println("Connecting to WiFi..");
  }
  Serial.println("Connected to the WiFi network");
}

void loop() {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin("http://espworkshop.ml/62205b18-4b3b-4383-bdeb-033f5bbd42bb/");
    http.addHeader("Content-Type", "text/plain");
    int httpResponseCode = http.POST("Lorem Ipsum");
    if (httpResponseCode > 0) {
      String response = http.getString();
      Serial.println(httpResponseCode);
      Serial.println(response);
      DynamicJsonBuffer  jsonBuffer(200);
      JsonObject& root = jsonBuffer.parseObject(response);
      if (!root.success()) {
        Serial.println("parseObject() failed");
        return;
      }
      int Data = root["data"];
      Serial.println(Data);
      before = now;
      now = map(Data, 0, 100, 0, 1000);
      stepper.step((now - before));
    } else {
      Serial.print("Error on sending POST: ");
      Serial.println(httpResponseCode);
    }
    http.end();
  } else {
    Serial.println("Error in WiFi connection");
  }
  delay(10000);
}
